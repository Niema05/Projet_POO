<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.LivreController">
    
    <!-- En-tête -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2C3E50; -fx-padding: 15;">
            <Label text="Gestion des Livres" textFill="white">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
            
            <!-- Statistiques -->
            <HBox spacing="30" alignment="CENTER_LEFT">
                <VBox alignment="CENTER">
                    <Label text="Total" textFill="#BDC3C7" style="-fx-font-size: 12;"/>
                    <Label fx:id="lblTotal" text="0" textFill="white" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Disponibles" textFill="#BDC3C7" style="-fx-font-size: 12;"/>
                    <Label fx:id="lblDisponibles" text="0" textFill="#2ECC71" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="Empruntés" textFill="#BDC3C7" style="-fx-font-size: 12;"/>
                    <Label fx:id="lblEmpruntes" text="0" textFill="#E74C3C" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>
        </VBox>
    </top>
    
    <!-- Contenu principal -->
    <center>
        <SplitPane dividerPositions="0.6">
            
            <!-- Partie gauche : TableView -->
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                
                <!-- Barre de recherche -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="txtRecherche" promptText="Rechercher par titre, auteur ou ISBN..." 
                               HBox.hgrow="ALWAYS" style="-fx-font-size: 14;"/>
                    <Button fx:id="btnRechercher" text="Rechercher" onAction="#handleRechercher" 
                            style="-fx-background-color: #3498DB; -fx-text-fill: white;"/>
                    <Button fx:id="btnRafraichir" text="↻" onAction="#handleRafraichir" 
                            style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-font-size: 16;"/>
                </HBox>
                
                <!-- Tableau des livres -->
                <TableView fx:id="tableViewLivres" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colIsbn" text="ISBN" prefWidth="120"/>
                        <TableColumn fx:id="colTitre" text="Titre" prefWidth="200"/>
                        <TableColumn fx:id="colAuteur" text="Auteur" prefWidth="150"/>
                        <TableColumn fx:id="colAnnee" text="Année" prefWidth="80"/>
                        <TableColumn fx:id="colDisponible" text="Disponible" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>
            
            <!-- Partie droite : Formulaire -->
            <VBox spacing="15" style="-fx-background-color: #ECF0F1;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <Label text="Détails du livre" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                <Separator/>
                
                <!-- Formulaire -->
                <GridPane hgap="10" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" prefWidth="100"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    
                    <!-- ISBN -->
                    <Label text="ISBN :" GridPane.rowIndex="0" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtIsbn" GridPane.rowIndex="0" GridPane.columnIndex="1"
                               promptText="978-X-XXX-XXXXX-X"/>
                    
                    <!-- Titre -->
                    <Label text="Titre :" GridPane.rowIndex="1" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtTitre" GridPane.rowIndex="1" GridPane.columnIndex="1"
                               promptText="Titre du livre"/>
                    
                    <!-- Auteur -->
                    <Label text="Auteur :" GridPane.rowIndex="2" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtAuteur" GridPane.rowIndex="2" GridPane.columnIndex="1"
                               promptText="Nom de l'auteur"/>
                    
                    <!-- Année -->
                    <Label text="Année :" GridPane.rowIndex="3" GridPane.columnIndex="0" 
                           style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtAnnee" GridPane.rowIndex="3" GridPane.columnIndex="1"
                               promptText="2024"/>
                </GridPane>
                
                <Separator/>
                
                <!-- Boutons d'action -->
                <VBox spacing="10">
                    <Button fx:id="btnNouveau" text="Nouveau" onAction="#handleNouveau" 
                            maxWidth="Infinity" style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-font-size: 14;"/>
                    <Button fx:id="btnAjouter" text="Ajouter" onAction="#handleAjouter" 
                            maxWidth="Infinity" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-size: 14;"/>
                    <Button fx:id="btnModifier" text="Modifier" onAction="#handleModifier" 
                            maxWidth="Infinity" style="-fx-background-color: #F39C12; -fx-text-fill: white; -fx-font-size: 14;"/>
                    <Button fx:id="btnSupprimer" text="Supprimer" onAction="#handleSupprimer" 
                            maxWidth="Infinity" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14;"/>
                </VBox>
                
                <!-- Spacer -->
                <Region VBox.vgrow="ALWAYS"/>
                
                <!-- Aide -->
                <VBox spacing="5" style="-fx-background-color: #D5DBDB; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text=" Aide" style="-fx-font-weight: bold;"/>
                    <Label text="• Sélectionnez un livre dans le tableau" wrapText="true" style="-fx-font-size: 11;"/>
                    <Label text="• Modifiez les champs" wrapText="true" style="-fx-font-size: 11;"/>
                    <Label text="• Cliquez sur l'action souhaitée" wrapText="true" style="-fx-font-size: 11;"/>
                </VBox>
            </VBox>
            
        </SplitPane>
    </center>
    
</BorderPane>
